/*-----QWidget-----*/
QWidget
{
	background-color: #ffffff;
	color: #000000;
	selection-background-color: #b78620;
	selection-color: #ffffff;
}

/*-----QLabel-----*/
QLabel
{
	background-color: transparent;
	color: #000000;
}

/*-----QMenuBar-----*/
QMenuBar 
{
	background-color: #e5e5e5;
	border: 1px solid #000;
	color: #000000;
}

QMenuBar::item 
{
	background-color: transparent;
}

QMenuBar::item:selected 
{
	background-color: #b78620;
	border: 1px solid #b78620;
	color: #ffffff;
}

QMenuBar::item:pressed 
{
	background-color: #b78620;
	border: 1px solid #b78620;
	color: #ffffff;
}

/*-----QMenu-----*/
QMenu
{
    background-color: #e5e5e5;
    border: 1px solid #222;
    padding: 4px;
	color: #000000;
}

QMenu::item
{
    background-color: transparent;
    padding: 2px 20px 2px 20px;
}

QMenu::separator
{
   	background-color: #b78620;
	height: 1px;
}

QMenu::item:disabled
{
    color: #555;
    background-color: transparent;
    padding: 2px 20px 2px 20px;
}

QMenu::item:selected
{
	background-color: #b78620;
	border: 1px solid #b78620;
	color: #ffffff;
}

/*-----QToolBar-----*/
QToolBar
{
	background-color: #e5e5e5;
	border-top: none;
	border-bottom: 1px solid #cccccc;
	border-left: 1px solid #cccccc;
	border-right: 1px solid #cccccc;
}

QToolBar::separator
{
	background-color: #cccccc;
	width: 1px;
}

/*-----QToolButton-----*/
QToolButton 
{
	background-color: transparent;
	color: #000000;
	padding: 5px;
	padding-left: 8px;
	padding-right: 8px;
	margin-left: 1px;
}

QToolButton:hover
{
	background-color: #b78620;
	color: #ffffff;
}

QToolButton:pressed
{
	background-color: #b78620;
	color: #ffffff;
}

QToolButton:checked
{
	background-color: #b78620;
}

/*-----QPushButton-----*/
QPushButton
{
	border: 2px solid #000000;
	background-color: #b78620;
	color: #ffffff;
	min-width: 80px;
	border-style: solid;
	border-width: 1px;
	border-radius: 5px;
	border-color: #051a39;
	padding: 5px;
}

QPushButton::flat
{
	background-color: transparent;
	border: none;
	color: #000000;
}

QPushButton::disabled
{
	background-color: #cccccc;
	color: #888888;
	border-color: #cccccc;
}

QPushButton::hover
{
	background-color: #d89e25;
	border: 1px solid #b78620;
}

QPushButton::pressed
{
	background-color: #a37118;
	border: 1px solid #b78620;
}

QPushButton::checked
{
	background-color: #a37118;
	border: 1px solid #b78620;
}

/*-----QLineEdit-----*/
QLineEdit
{
	background-color: #ffffff;
	color: #000000;
	border: 1px solid #cccccc;
	border-radius: 2px;
	padding: 3px;
	padding-left: 5px;
}

/*-----QPlainTextEdit-----*/
QPlainTextEdit
{
	background-color: #ffffff;
	color: #000000;
	border: 1px solid #cccccc;
	border-radius: 2px;
	padding: 3px;
	padding-left: 5px;
}

/*-----QTabBar-----*/
QTabBar::tab
{
	background-color: #cccccc;
	color: #000000;
	border-style: solid;
	border-width: 1px;
	border-color: #666666;
	border-bottom: none;
	padding: 5px;
	padding-left: 15px;
	padding-right: 15px;
}

QTabWidget::pane 
{
	background-color: #ffffff;
	border: 1px solid #cccccc;
}

QTabBar::tab:last
{
	margin-right: 0; 
}

QTabBar::tab:first:!selected
{
	background-color: #ffffff;
	margin-left: 0px;
}

QTabBar::tab:!selected
{
	color: #000000;
	border-bottom-style: solid;
	background-color: #ffffff;
}

QTabBar::tab:selected
{
	margin-bottom: 0px;
}

QTabBar::tab:!selected:hover
{
	border-top-color: #b78620;
}

/*-----QComboBox-----*/
QComboBox
{
    background-color: #ffffff;
    border: 1px solid #000;
    padding-left: 6px;
    color: #000000;
    height: 20px;
}

QComboBox::disabled
{
	background-color: #cccccc;
	color: #888888;
	border-color: #cccccc;
}

QComboBox:on
{
    background-color: #b78620;
	color: #ffffff;
}

QComboBox QAbstractItemView
{
    background-color: #383838;
    color: #ffffff;
    border: 1px solid black;
    selection-background-color: #b78620;
    outline: 0;
}

QComboBox::drop-down
{
	background-color: #cccccc;
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
    border-left-width: 1px;
    border-left-color: black;
    border-left-style: solid; 
}

QComboBox::down-arrow
{
    image: url(://arrow-down.png);
    width: 8px;
    height: 8px;
}

/*-----QSpinBox & QDateTimeEdit-----*/
QSpinBox,
QDateTimeEdit 
{
    background-color: #ffffff;
	color : #000000;
	border: 1px solid #cccccc;
	padding: 

3px;
	padding-left: 5px;
    border-radius : 2px;
}

QSpinBox::up-button, 
QDateTimeEdit::up-button
{
	border-top-right-radius:2px;
	background-color: #777777;
    width: 16px; 
    border-width: 1px;
}

QSpinBox::up-button:hover, 
QDateTimeEdit::up-button:hover
{
	background-color: #585858;
}

QSpinBox::up-button:pressed, 
QDateTimeEdit::up-button:pressed
{
	background-color: #252525;
    width: 16px; 
    border-width: 1px;
}

QSpinBox::up-arrow,
QDateTimeEdit::up-arrow
{
    image: url(://arrow-up.png);
    width: 7px;
    height: 7px;
}

QSpinBox::down-button, 
QDateTimeEdit::down-button
{
	border-bottom-right-radius:2px;
	background-color: #777777;
    width: 16px; 
    border-width: 1px;
}

QSpinBox::down-button:hover, 
QDateTimeEdit::down-button:hover
{
	background-color: #585858;
}

QSpinBox::down-button:pressed, 
QDateTimeEdit::down-button:pressed
{
	background-color: #252525;
    width: 16px; 
    border-width: 1px;
}

QSpinBox::down-arrow,
QDateTimeEdit::down-arrow
{
    image: url(://arrow-down.png);
    width: 7px;
    height: 7px;
}

/*-----QGroupBox-----*/
QGroupBox 
{
    border: 1px solid #666666;
	border-radius: 5px;
    margin-top: 20px;
}

QGroupBox::title  
{
    background-color: transparent;
    color: #000000;
    subcontrol-origin: margin;
    padding: 5px;
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
}

/*-----QHeaderView-----*/
QHeaderView::section
{
    background-color: #cccccc;
	border: 1px solid #000;
    color: #000000;
    text-align: left;
	padding: 4px;
}

QHeaderView::section:disabled
{
    background-color: #525251;
    color: #656565;
}

QHeaderView::section:checked
{
    background-color: #cccccc;
    color: #000000;
}

QHeaderView::section::vertical::first,
QHeaderView::section::vertical::only-one
{
    border-top: 1px solid #353635;
}

QHeaderView::section::vertical
{
    border-top: 1px solid #353635;
}

QHeaderView::section::horizontal::first,
QHeaderView::section::horizontal::only-one
{
    border-left: 1px solid #353635;
}

QHeaderView::section::horizontal
{
    border-left: 1px solid #353635;
}

QTableCornerButton::section
{
    background-color: #cccccc;
	border: 1px solid #000;
    color: #000000;
}

/*-----QTreeWidget-----*/
QTreeView
{
	show-decoration-selected: 1;
	alternate-background-color: #ffffff;
	selection-color: #ffffff;
	background-color: #ffffff;
	border: 1px solid gray;
	padding-top : 5px;
	color: #000000;
	font: 8pt;
}

QTreeView::item:selected
{
	color:#ffffff;
	background-color: #b78620;
	border-radius: 0px;
}

QTreeView::item:!selected:hover
{
    background-color: #f0f0f0;
    border: none;
    color: #000000;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings 
{
	image: url(://tree-closed.png);
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings  
{
	image: url(://tree-open.png);
}

/*-----QListView-----*/
QListView 
{
	background-color: #ffffff;
    border : none;
    color: #000000;
    show-decoration-selected: 1; 
    outline: 0;
}

QListView::disabled 
{
	background-color: #cccccc;
	color: #888888;
    border: 1px solid #cccccc;
}

QListView::item 
{
	background-color: #ffffff;
    padding: 1px;
}

QListView::item:alternate 
{
    background-color: #f0f0f0;
}

QListView::item:selected 
{
	background-color: #b78620;
	border: 1px solid #b78620;
	color: #ffffff;
}

QListView::item:selected:!active 
{
	background-color: #b78620;
	border: 1px solid #b78620;
	color: #ffffff;
}

QListView::item:selected:active 
{
	background-color: #b78620;
	border: 1px solid #b78620;
	color: #ffffff;
}

QListView::item:hover 
{
    background-color: #f0f0f0;
    border: none;
    color: #000000;
}

/*-----QCheckBox-----*/
QCheckBox
{
	background-color: transparent;
    color: #000000;
	border: none;
}

QCheckBox::indicator
{
    background-color: #ffffff;
    border: 1px solid #000000;
    width: 12px;
    height: 12px;
}

QCheckBox::indicator:checked
{
    background-color: #b78620;
}

QCheckBox::indicator:unchecked:hover
{
	border: 1px solid #b78620; 
}

QCheckBox::disabled
{
	color: #888888;
}

QCheckBox::indicator:disabled
{
	background-color: #cccccc;
	color: #888888;
    border: 1px solid #cccccc;
}

/*-----QRadioButton-----*/
QRadioButton 
{
	color: #000000;
	background-color: transparent;
}

QRadioButton::indicator::unchecked:hover 
{
	background-color: #b78620;
	border: 2px solid

 #b78620;
	border-radius: 6px;
}

QRadioButton::indicator::checked 
{
	border: 2px solid #b78620;
	border-radius: 6px;
	background-color: #b78620;  
	width: 9px; 
	height: 9px; 
}

/*-----QSlider-----*/
QSlider::groove:horizontal 
{
	background-color: transparent;
	height: 3px;
}

QSlider::sub-page:horizontal 
{
	background-color: #b78620;
}

QSlider::add-page:horizontal 
{
	background-color: #ffffff;
}

QSlider::handle:horizontal 
{
	background-color: #ffffff;
	width: 14px;
	margin-top: -6px;
	margin-bottom: -6px;
	border-radius: 6px;
}

QSlider::handle:horizontal:hover 
{
	background-color: #ffffff;
	border-radius: 6px;
}

QSlider::sub-page:horizontal:disabled 
{
	background-color: #bbbbbb;
	border-color: #999999;
}

QSlider::add-page:horizontal:disabled 
{
	background-color: #eeeeee;
	border-color: #999999;
}

QSlider::handle:horizontal:disabled 
{
	background-color: #eeeeee;
	border: 1px solid #aaaaaa;
	border-radius: 3px;
}

/*-----QScrollBar-----*/
QScrollBar:horizontal
{
    border: 1px solid #666666;
    background-color: #cccccc;
    height: 15px;
    margin: 0px 16px 0 16px;
}

QScrollBar::handle:horizontal
{
	background-color: #b78620;
	border: 1px solid #b78620;
    min-height: 20px;
}

QScrollBar::add-line:horizontal
{
	background-color: #cccccc;
	border: 1px solid #666666;
    width: 15px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal
{
	background-color: #cccccc;
	border: 1px solid #666666;
    width: 15px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar::right-arrow:horizontal
{
    image: url(://arrow-right.png);
    width: 6px;
    height: 6px;
}

QScrollBar::left-arrow:horizontal
{
    image: url(://arrow-left.png);
    width: 6px;
    height: 6px;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal
{
    background: none;
}

QScrollBar:vertical
{
    background-color: #cccccc;
    width: 16px;
	border: 1px solid #666666;
    margin: 16px 0px 16px 0px;
}

QScrollBar::handle:vertical
{
    background-color: #b78620;
	border: 1px solid #b78620;
    min-height: 20px;
}

QScrollBar::add-line:vertical
{
	background-color: #cccccc;
	border: 1px solid #666666;
    height: 15px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical
{
	background-color: #cccccc;
	border: 1px solid #666666;
    height: 15px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical
{
    image: url(://arrow-up.png);
    width: 6px;
    height: 6px;
}

QScrollBar::down-arrow:vertical
{
    image: url(://arrow-down.png);
    width: 6px;
    height: 6px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical
{
    background: none;
}

/*-----QProgressBar-----*/
QProgressBar
{
    border: 1px solid #666666;
    text-align: center;
	color: #000000;
	font-weight: bold;
}

QProgressBar::chunk
{
    background-color: #b78620;
    width: 30px;
    margin: 0.5px;
}